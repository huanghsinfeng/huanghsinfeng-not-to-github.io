---
layout: json
permalink: posts.json
---
[
  {% for post in site.posts %}
    {
      "title": {{ post.title | jsonify }},
      "url": {{ post.url | absolute_url | jsonify }},
      "date": {{ post.date | date: "%Y-%m-%d %H:%M:%S" | jsonify }},
      "last_modified_at": {{ post.last_modified_at | date: "%Y-%m-%d %H:%M:%S" | jsonify }},
      "excerpt": {{ post.excerpt | strip_html | strip_newlines | jsonify }},
      "content": {{ post.content | strip_newlines | jsonify }},
      "categories": {{ post.categories | jsonify }},
      "tags": {{ post.tags | jsonify }},
      "author": {{ post.author | default: "未知" | jsonify }},
      "reading_time": {{ post.content | number_of_words | divided_by:200 | ceil }},
      "path": {{ post.path | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
